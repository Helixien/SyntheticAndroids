<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>SA_TemperatureHot</defName>
        <label>high temperature</label>
        <description>ph</description>
        <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
        <lethalSeverity>1</lethalSeverity>
		<hediffClass>SyntheticAndroids.Hediff_Overheating</hediffClass>
        <taleOnVisible>HeatstrokeRevealed</taleOnVisible>
        <stages>
            <li>
                <label>initial</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>initial</label>
                <minSeverity>0.04</minSeverity>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>serious</label>
                <minSeverity>0.50</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.20</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>overheating</label>
                <minSeverity>0.80</minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <HediffDef>
        <defName>SA_TemperatureCold</defName>
        <label>low temperature</label>
        <description>ph</description>
        <defaultLabelColor>(0.8, 0.8, 1)</defaultLabelColor>
		<hediffClass>SyntheticAndroids.Hediff_Freezing</hediffClass>
        <taleOnVisible>HypothermiaRevealed</taleOnVisible>
        <stages>
            <li>
                <label>shivering</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>shivering</label>
                <minSeverity>0.04</minSeverity>
                <capMods>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.08</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.05</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.2</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.1</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.2</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.10</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>serious</label>
                <minSeverity>0.5</minSeverity>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>-0.3</offset>
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>-0.5</offset>
                    </li>
                    <li>
                        <capacity>Consciousness</capacity>
                        <offset>-0.20</offset>
                    </li>
                </capMods>
            </li>
            <li>
                <label>freezing</label>
                <minSeverity>0.80<minSeverity>
                <lifeThreatening>true</lifeThreatening>
                <capMods>
                    <li>
                        <capacity>Consciousness</capacity>
                        <setMax>0.1</setMax>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

</Defs>